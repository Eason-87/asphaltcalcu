---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Cal from '../components/Cal.jsx';
import HowToUse from '../components/HowToUse.astro';
import Parameters from '../components/Parameters.astro';
import FAQ from '../components/FAQ.astro';
import AsphaltTypes from '../components/AsphaltTypes.astro';
import Footer from '../components/Footer.astro';

// SEO metadata
const title = "Professional Asphalt Calculator | ACPro";
const description = "Use this professional asphalt calculator to accurately and quickly determine the required asphalt tonnage and the budget necessary for its purchase.";
---

<Layout title={title} description={description} canonical="https://www.asphaltcalcu.com/">
  <Header />
  
  <main>
    
    <div style="padding-top: 20px; width: 100vw; display:flex;justify-content:center;flex-direction:column;align-items:center">
      <div style="display:flex;height: 50px;align-items:center">    
         <h1 style="font-size: 24px;margin-top: 15px;color:#3257a7">
            ACPro - Professional Asphalt Calculator
          </h1>
      </div>
      <p style={{
        textAlign:"center"
      }}>
        Use this professional asphalt calculator to determine the amount of asphalt you need and the budget required for your purchase.
      </p>
    </div>
    
    <div id="calculator" style="display: flex; justify-content: center;">
      <Cal client:visible />
    </div>
 
    <Parameters />
    <AsphaltTypes />
    <FAQ />
  </main>
  
  <Footer />
</Layout>

<style>
    .calculator-title {
      font-size: 18px;
      font-weight: bold;
      color: #1e293b;
    }

    .header {
      margin-top: 100px;
      display:flex;
      width: 100vh;

    }

  .hero-section {
    background-color: var(--color-primary);
    color: white;
    padding: var(--spacing-16) 0;
    background-image: linear-gradient(135deg, rgba(26, 32, 44, 0.95) 0%, rgba(45, 55, 72, 0.95) 100%),
                      url('/images/banner.jpg');
    background-size: cover;
    background-position: center;
    position: relative;
  }
  
  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }
  
  .hero-content h1 {
    font-size: 3rem;
    margin-bottom: var(--spacing-4);
    color: white;
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-8);
    color: rgba(255, 255, 255, 0.9);
  }
  
  .hero-cta {
    display: flex;
    gap: var(--spacing-4);
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .primary-button {
    display: inline-block;
    padding: var(--spacing-3) var(--spacing-6);
    background-color: var(--color-accent);
    color: var(--color-primary);
    font-weight: 700;
    border-radius: var(--border-radius-md);
    text-decoration: none;
    transition: background-color var(--transition-fast), transform var(--transition-fast);
  }
  
  .primary-button:hover {
    background-color: var(--color-accent-light);
    transform: translateY(-2px);
    text-decoration: none;
  }
  
  .secondary-button {
    display: inline-block;
    padding: var(--spacing-3) var(--spacing-6);
    background-color: transparent;
    color: white;
    font-weight: 700;
    border: 2px solid white;
    border-radius: var(--border-radius-md);
    text-decoration: none;
    transition: background-color var(--transition-fast), transform var(--transition-fast);
  }
  
  .secondary-button:hover {
    background-color: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
    text-decoration: none;
  }
  
  main {
    overflow-x: hidden;
  }
  
  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2.25rem;
    }
    
    .hero-subtitle {
      font-size: 1.125rem;
    }
    
    .hero-cta {
      flex-direction: column;
    }
  }
</style>