---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const keywords = ' '
import {
  Calculator,
  CarIcon,
  Calculator
} from "lucide-react";
---

<Layout 
  title="More Calculators | Asphalt Calculator" 
  description="Find additional calculators that you may need here." 
  keywords={keywords}
  canonical="https://www.asphaltcalcu.com/more-calculators"
>
  <Header />

  <div class="more-calculators-container">
    <h1 class="main-title">Find More Calculators</h1>
    <div class="card-grid">
      <a href="/asphalt-driveway-cost" class="calc-card">
        <div class="icon">
          <CarIcon size={64} />
        </div>
        <div class="card-title">Asphalt Driveway Cost Calculator</div>
      </a>
      <a href="/asphalt-tonnage" class="calc-card">
        <div class="icon">
           <Calculator size={64} />
        </div>
        <div class="card-title">Asphalt Tonnage Calculator</div>
      </a>
      
    </div>
  </div>

  <Footer />
</Layout>

<style>
.more-calculators-container {
  width: 100vw;
  max-width: 900px;
  margin: 0 auto;
  padding: 40px 0 80px 0;
  min-height: 80vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.main-title {
  color: #3257a7;
  font-size: 2rem;
  font-weight: bold;
  margin-bottom: 2.5rem;
  text-align: center;
}
.card-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 2rem;
  width: 100%;
  justify-items: center;
}
.calc-card {
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.07);
  padding: 2.5rem 1.5rem 2rem 1.5rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-decoration: none;
  color: #222;
  transition: box-shadow 0.2s, transform 0.2s;
  min-width: 220px;
  max-width: 320px;
  border: 1px solid #f2f2f2;
}
.calc-card:hover {
  box-shadow: 0 6px 24px rgba(192,57,43,0.13);
  border-color: #3257a7;
}
.icon {
  font-size: 2rem;
  margin-bottom: 1.2rem;
  color: #3257a7;
}
.card-title {
  font-size: 1.15rem;
  font-weight: 600;
  text-align: center;
}
@media (max-width: 600px) {
  .main-title {
    font-size: 1.5rem;
  }
  .card-grid {
    gap: 1.2rem;
  }
  .calc-card {
    padding: 1.5rem 0.5rem 1.2rem 0.5rem;
    min-width: 140px;
  }
  .icon {
    font-size: 2rem;
  }
}
</style>