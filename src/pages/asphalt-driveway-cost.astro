---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Asphalt Driveway Cost Calculator" description="Calculate the estimated cost of your asphalt driveway project" keywords="asphalt driveway, asphalt driveway cost, asphalt driveway calculator" canonical="https://www.asphaltcalcu.com/asphalt-driveway-cost">
  <Header />
  <main>
    <section class="hero">
      <div class="container">
        <h1>Asphalt Driveway Cost Calculator</h1>
        <p class="lead">Calculate the estimated cost of your asphalt driveway project</p>
      </div>
    </section>

    <section class="calculator-section">
      <div class="container">
        <div class="calculator-container">
          <form id="driveway-cost-calculator" class="calculator-form">
            <div class="form-group">
              <label for="length">Length (feet)</label>
              <input type="number" id="length" name="length" required min="0" step="0.1">
            </div>
            <div class="form-group">
              <label for="width">Width (feet)</label>
              <input type="number" id="width" name="width" required min="0" step="0.1">
            </div>
            <div class="form-group">
              <label for="thickness">Thickness (inches)</label>
              <input type="number" id="thickness" name="thickness" required min="2" max="6" step="0.5">
            </div>
            <div class="form-group">
              <label for="price-per-ton">Price per Ton ($)</label>
              <input type="number" id="price-per-ton" name="price-per-ton" required min="0" step="0.01">
            </div>
            <div class="form-group">
              <label for="labor-cost">Labor Cost ($/sq ft)</label>
              <input type="number" id="labor-cost" name="labor-cost" min="0" step="0.01" value="2">
              <small>Optional: Average $1-$3/sq ft</small>
            </div>
            <div class="form-group">
              <label for="gravel-base">Gravel Base Cost ($/sq ft)</label>
              <input type="number" id="gravel-base" name="gravel-base" min="0" step="0.01" value="1">
              <small>Optional: Average $0.50-$2/sq ft</small>
            </div>
            <div class="form-group">
              <label for="removal-cost">Existing Driveway Removal ($/sq ft)</label>
              <input type="number" id="removal-cost" name="removal-cost" min="0" step="0.01" value="2">
              <small>Optional: Average $1-$3/sq ft</small>
            </div>
            <button type="submit" class="btn-primary">Calculate Cost</button>
          </form>
          <div class="calculator-results">
            <h2 style={{
              fontSize:"20px"
            }}>Estimated Cost</h2>
            <div class="result-item">
              <span class="label">Total Area:</span>
              <span class="value" id="total-area">0 sq ft</span>
            </div>
            <div class="result-item">
              <span class="label">Total Volume:</span>
              <span class="value" id="total-volume">0 cubic yards</span>
            </div>
            <div class="result-item">
              <span class="label">Total Weight:</span>
              <span class="value" id="total-weight">0 tons</span>
            </div>
            <div class="result-item">
              <span class="label">Material Cost:</span>
              <span class="value" id="material-cost">$0.00</span>
            </div>
            <div class="result-item">
              <span class="label">Labor Cost:</span>
              <span class="value" id="labor-cost-result">$0.00</span>
            </div>
            <div class="result-item">
              <span class="label">Gravel Base Cost:</span>
              <span class="value" id="gravel-cost">$0.00</span>
            </div>
            <div class="result-item">
              <span class="label">Removal Cost:</span>
              <span class="value" id="removal-cost-result">$0.00</span>
            </div>
            <div class="result-item total">
              <span class="label">Total Cost:</span>
              <span class="value" id="total-cost">$0.00</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="info-section">
      <div class="container">
        <div class="info-container">
          <h2>Calculator Considerations</h2>
          <div class="info-grid">
            <div class="info-card">
              <h3>Driveway Dimensions</h3>
              <ul>
                <li>Length, width, thickness (typically 2-3 inches for asphalt layer)</li>
              </ul>
            </div>
            <div class="info-card">
              <h3>Material Costs</h3>
              <ul>
                <li>Asphalt mix price (per ton or square foot, affected by oil prices and region)</li>
              </ul>
            </div>
            <div class="info-card">
              <h3>Labor Costs</h3>
              <ul>
                <li>Construction team fees (hourly or project-based pricing)</li>
              </ul>
            </div>
            <div class="info-card">
              <h3>Base Preparation</h3>
              <ul>
                <li>Gravel base, land leveling, or existing driveway removal if needed</li>
              </ul>
            </div>
          </div>

          <h2>Cost Estimation Reference (US Market, 2023 Data)</h2>
          <div class="price-table">
            <table>
              <thead>
                <tr>
                  <th>Item</th>
                  <th>Price Range</th>
                  <th>Notes</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Asphalt Material</td>
                  <td>$2 - $5/sq ft</td>
                  <td>2-3 inches thickness</td>
                </tr>
                <tr>
                  <td>Labor</td>
                  <td>$1 - $3/sq ft</td>
                  <td>Varies by region and complexity</td>
                </tr>
                <tr>
                  <td>Gravel Base</td>
                  <td>$0.50 - $2/sq ft</td>
                  <td>If additional reinforcement needed</td>
                </tr>
                <tr>
                  <td>Existing Driveway Removal</td>
                  <td>$1 - $3/sq ft</td>
                  <td>If removal of existing surface required</td>
                </tr>
                <tr class="total-row">
                  <td><strong>Total Cost</strong></td>
                  <td><strong>$3 - $10/sq ft</strong></td>
                  <td>Standard driveway (12'x50' approximately $1,800-$6,000)</td>
                </tr>
              </tbody>
            </table>
          </div>

          <h2>Key Factors Affecting Cost</h2>
          <ul class="factors-list">
            <li><strong>Regional Differences</strong>: Material shipping and labor costs vary by location (rural vs. urban)</li>
            <li><strong>Season</strong>: Winter construction may be more expensive (requires heated asphalt mix)</li>
            <li><strong>Design Complexity</strong>: Curved driveways and slopes increase costs</li>
          </ul>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .hero {
    padding: var(--spacing-8) 0;
    text-align: center;
  }

  .hero h1 {
    font-size: 1.6rem;
    margin-bottom: var(--spacing-4);
  }

  .lead {
    font-size: 1.25rem;
    opacity: 0.9;
  }

  .calculator-section {
    padding: var(--spacing-5) 0;
  }

  .calculator-container {
    max-width: 800px;
    margin: 0 auto;
    background: var(--color-background);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-lg);
    padding: var(--spacing-6);
  }

  .calculator-form {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-4);
    margin-bottom: var(--spacing-6);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
  }

  .form-group label {
    font-weight: 500;
    color: var(--color-text);
  }

  .form-group input {
    padding: var(--spacing-2);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-md);
    font-size: 1rem;
  }

  .btn-primary {
    grid-column: 1 / -1;
    background: #3257a7;
    color: white;
    border: none;
    padding: var(--spacing-3) var(--spacing-6);
    border-radius: var(--border-radius-md);
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: background-color var(--transition-fast);
  }

  .btn-primary:hover {
    background: rgba(50, 87, 167, .9);
  }

  .calculator-results {
    background: var(--color-background-alt);
    padding: var(--spacing-4);
    border-radius: var(--border-radius-md);
  }

  .calculator-results h2 {
    margin-bottom: var(--spacing-4);
    color: var(--color-text);
  }

  .result-item {
    display: flex;
    justify-content: space-between;
    padding: var(--spacing-2) 0;
    border-bottom: 1px solid var(--color-border);
  }

  .result-item:last-child {
    border-bottom: none;
  }

  .result-item.total {
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .calculator-form {
      grid-template-columns: 1fr;
    }
  }

  .info-section {
    padding: var(--spacing-8) 0;
  }

  .info-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .info-container h2 {
    font-size: 1.5rem;
    margin: var(--spacing-8) 0 var(--spacing-4);
    color: var(--color-text);
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-4);
    margin-bottom: var(--spacing-8);
  }

  .info-card {
    background: var(--color-background);
    padding: var(--spacing-4);
    border-radius: var(--border-radius-md);
    box-shadow: var(--shadow-sm);
  }

  .info-card h3 {
     font-size: 1rem;
    color: var(--color-primary);
    margin-bottom: var(--spacing-2);
  }

  .info-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .info-card li {
    color: var(--color-text);
    line-height: 1.6;
  }

  .price-table {
    margin: var(--spacing-6) 0;
    overflow-x: auto;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    background: var(--color-background);
 
    overflow: hidden;
  }

  th, td {
    padding: var(--spacing-3) var(--spacing-4);
    text-align: left;
    border-bottom: 1px solid var(--color-border);
  }

  th {
    background: #f7fafc;
    font-weight: 500;
  }

  .total-row {
    background: var(--color-background-alt);
    font-weight: 500;
  }

  .factors-list {
    list-style: none;
    padding: 0;
    margin: var(--spacing-4) 0;
  }

  .factors-list li {
    margin-bottom: var(--spacing-3);
    padding-left: var(--spacing-6);
    position: relative;
  }

  .factors-list li::before {
    content: "â€¢";
    color: var(--color-primary);
    position: absolute;
    left: 0;
    font-size: 1.5rem;
  }

  .tips-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-4);
    margin-top: var(--spacing-4);
  }

  .tip-card {
    background: var(--color-background);
    padding: var(--spacing-4);
    border-radius: var(--border-radius-md);
    box-shadow: var(--shadow-sm);
  }

  .tip-card h3 {
    color: var(--color-primary);
    margin-bottom: var(--spacing-2);
  }

  .tip-card p {
    color: var(--color-text);
    line-height: 1.6;
    margin: 0;
  }

  @media (max-width: 768px) {
    .info-grid {
      grid-template-columns: 1fr;
    }

    .tips-container {
      grid-template-columns: 1fr;
    }

    th, td {
      padding: var(--spacing-2) var(--spacing-3);
    }
  }
</style>

<script>
  document.getElementById('driveway-cost-calculator').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const length = parseFloat(document.getElementById('length').value);
    const width = parseFloat(document.getElementById('width').value);
    const thickness = parseFloat(document.getElementById('thickness').value);
    const pricePerTon = parseFloat(document.getElementById('price-per-ton').value);
    const laborCost = parseFloat(document.getElementById('labor-cost').value) || 0;
    const gravelBaseCost = parseFloat(document.getElementById('gravel-base').value) || 0;
    const removalCost = parseFloat(document.getElementById('removal-cost').value) || 0;
    
    // Calculate area in square feet
    const area = length * width;
    
    // Calculate volume in cubic yards
    const volume = (area * (thickness / 12)) / 27;
    
    // Calculate weight in tons (assuming 2.4 tons per cubic yard)
    const weight = volume * 2.4;
    
    // Calculate costs
    const materialCost = weight * pricePerTon;
    const totalLaborCost = area * laborCost;
    const totalGravelCost = area * gravelBaseCost;
    const totalRemovalCost = area * removalCost;
    
    // Calculate total cost
    const totalCost = materialCost + totalLaborCost + totalGravelCost + totalRemovalCost;
    
    // Update results
    document.getElementById('total-area').textContent = `${area.toFixed(2)} sq ft`;
    document.getElementById('total-volume').textContent = `${volume.toFixed(2)} cubic yards`;
    document.getElementById('total-weight').textContent = `${weight.toFixed(2)} tons`;
    document.getElementById('material-cost').textContent = `$${materialCost.toFixed(2)}`;
    document.getElementById('labor-cost-result').textContent = `$${totalLaborCost.toFixed(2)}`;
    document.getElementById('gravel-cost').textContent = `$${totalGravelCost.toFixed(2)}`;
    document.getElementById('removal-cost-result').textContent = `$${totalRemovalCost.toFixed(2)}`;
    document.getElementById('total-cost').textContent = `$${totalCost.toFixed(2)}`;
  });
</script> 