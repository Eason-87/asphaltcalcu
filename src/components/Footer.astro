const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
    
      <div class="footer-links">
        <div class="footer-section">
          <h3>Calculators</h3>
          <ul>
            <li><a href="/">Asphalt Calculator</a></li>
            <li><a href="/asphalt-driveway-cost">Asphalt Driveway Cost Calculator</a></li>
            <li><a href="/asphalt-tonnage">Asphalt Tonnage Calculator</a></li>
          </ul>
        </div>
        
        <div class="footer-section">
          <h3>Resources</h3>
          <ul>
            <li><a href="/blog">Blog</a></li>
            
          </ul>
        </div>

         <div class="footer-section">
          <h3>Other</h3>
          <ul>
            <li><a href="/terms">Terms</a></li>
            <li><a href="/privacy">Privacy</a></li>
          </ul>
