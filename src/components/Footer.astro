---
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-logo">
        <span class="logo-text">AsphaltCalc</span>
        <span class="logo-badge">Pro</span>
      </div>
      <p class="footer-tagline">Professional Asphalt Calculator for US Construction Projects</p>
      
      <div class="footer-links">
        <div class="footer-section">
          <h3>Calculator</h3>
          <ul>
            <li><a href="#calculator">Asphalt Calculator</a></li>
            <li><a href="#how-to-use">How to Use</a></li>
            <li><a href="#parameters">Parameters</a></li>
          </ul>
        </div>
        
        <div class="footer-section">
          <h3>Resources</h3>
          <ul>
            <li><a href="#faq">FAQ</a></li>
            <li><a href="#asphalt-types">Asphalt Types</a></li>
            <li><a href="#density-guide">Density Guide</a></li>
          </ul>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} AsphaltCalc Pro. All rights reserved.</p>
      <p>This calculator is provided for estimation purposes only. Always consult with a professional for final calculations.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-primary);
    color: white;
    padding: var(--spacing-8) 0;
    margin-top: var(--spacing-16);
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-8);
    margin-bottom: var(--spacing-8);
  }
  
  .footer-logo {
    display: flex;
    align-items: center;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: var(--spacing-2);
  }
  
  .logo-text {
    color: white;
  }
  
  .logo-badge {
    font-size: 0.75rem;
    padding: 0.125rem 0.375rem;
    background-color: var(--color-accent);
    color: var(--color-primary);
    border-radius: var(--border-radius-sm);
    margin-left: var(--spacing-1);
  }
  
  .footer-tagline {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--spacing-6);
  }
  
  .footer-links {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-8);
  }
  
  .footer-section h3 {
    color: white;
    margin-bottom: var(--spacing-4);
    font-size: 1.125rem;
  }
  
  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-section li {
    margin-bottom: var(--spacing-2);
  }
  
  .footer-section a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color var(--transition-fast);
  }
  
  .footer-section a:hover {
    color: white;
    text-decoration: underline;
  }
  
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: var(--spacing-6);
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
  }
  
  .footer-bottom p:last-child {
    margin-bottom: 0;
  }
  
  @media (min-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr 2fr;
    }
  }
</style>